<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" method="upgrade" version="1.5.0">
	<name>DocImport</name>
	<creationDate>##DATE##</creationDate>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@akeebabackup.com</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2006-2010 Nicholas K. Dionysopoulos</copyright>
	<license>GNU/GPL v3 or later</license>
	<version>##VERSION##</version>
	<description>Akeeba DocImport3 v.##VERSION##</description>

	<!-- Public front end files -->
	<files folder="frontend">
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>

		<filename>index.html</filename>
		<filename>dispatcher.php</filename>
		<filename>docimport.php</filename>
		<filename>metadata.xml</filename>
		<filename>router.php</filename>
	</files>
	
	<languages folder="translations/frontend">
		<language tag="en-GB">en-GB.com_docimport.ini</language>
	</languages>
	
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install/install.sql</file>
			<file charset="utf8" driver="mysqli">install/install.sql</file>
		</sql>
	</install>
	
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">install/uninstall.sql</file>
			<file charset="utf8" driver="mysqli">install/uninstall.sql</file>
		</sql>
	</uninstall>
	
	<media destination="com_docimport" folder="media">
		<folder>admonition</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<administration>
		<!-- Administration Menu Section -->
		<menu view="cpanel"
			img="../media/com_docimport/images/docimport-16.png">COM_DOCIMPORT</menu>
		<files folder="backend">
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>fof</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>models</folder>
			<folder>views</folder>
			
			<filename>index.html</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>docimport.php</filename>
		</files>
		
		<languages folder="translations/backend">
			<language tag="en-GB">en-GB.com_docimport.ini</language>
			<language tag="en-GB">en-GB.com_docimport.menu.ini</language>
			<language tag="en-GB">en-GB.com_docimport.sys.ini</language>
		</languages>
	</administration>
	
	<updateservers>
		<server type="extension" priority="1" name="DocImport Updates"><![CDATA[http://nocdn.akeebabackup.com/updates/docimport.xml]]></server>
	</updateservers>
	
	<!-- Installation / uninstallation PHP scripts -->
	<installfile>install.docimport.php</installfile>
	<uninstallfile>uninstall.docimport.php</uninstallfile>
	<scriptfile>script.docimport.php</scriptfile>
</install>